  <script>
    const logos = {
      1:`<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 240 240\" width=\"240\" height=\"240\">\n  <defs>\n    <linearGradient id=\"gA\" x1=\"0\" x2=\"1\">\n      <stop offset=\"0\" stop-color=\"#ff9a3c\"/>\n      <stop offset=\"1\" stop-color=\"#d35400\"/>\n    </linearGradient>\n  </defs>\n  <rect width=\"240\" height=\"240\" rx=\"36\" fill=\"#071024\"/>\n  <g transform=\"translate(20,20)\">\n    <path d=\"M80 12c-12 16-36 24-48 44-12 20-4 48 16 68s56 20 76 0 28-48 12-72S96 0 80 12z\" fill=\"url(#gA)\"/>\n    <text x=\"50%\" y=\"196\" font-family=\"Verdana, sans-serif\" font-size=\"22\" fill=\"#fff\" text-anchor=\"middle\">AGNI</text>\n  </g>\n</svg>`,

      2:`<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 240 240\" width=\"240\" height=\"240\">\n  <defs>\n    <linearGradient id=\"gB\" x1=\"0\" x2=\"1\">\n      <stop offset=\"0\" stop-color=\"#ffd07a\"/>\n      <stop offset=\"1\" stop-color=\"#ff7a00\"/>\n    </linearGradient>\n  </defs>\n  <rect width=\"240\" height=\"240\" rx=\"24\" fill=\"#071024\"/>\n  <g transform=\"translate(16,18)\">\n    <circle cx=\"84\" cy=\"84\" r=\"66\" fill=\"url(#gB)\" opacity=\"0.12\"/>\n    <path d=\"M40 120c18-34 58-28 80-6s24 40 0 56-60 8-80-20z\" fill=\"url(#gB)\"/>\n    <text x=\"50%\" y=\"196\" font-family=\"Georgia, serif\" font-size=\"20\" fill=\"#fff\" text-anchor=\"middle\">AGNI</text>\n  </g>\n</svg>`
    }

    function setLogo(n){
      const wrap = document.getElementById('logoPreview');
      wrap.innerHTML = logos[n];
      // set download link
      const blob = new Blob([logos[n]], {type:'image/svg+xml'});
      const url = URL.createObjectURL(blob);
      const dl = document.getElementById('downloadLogo');
      dl.href = url;
      dl.download = n===1? 'agni-logo-option1.svg':'agni-logo-option2.svg';
    }

    function applyTag(){
      const t = document.getElementById('tagSelect').value;
      document.getElementById('mainTag').textContent = t;
    }

    function copyLink(){
      navigator.clipboard.writeText(location.href).then(()=>{
        alert('Page link copied to clipboard');
      });
    }

    // initial setup
    document.getElementById('year').textContent = new Date().getFullYear();
    setLogo(1);
  </script>
</body>
